<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="true"
	xmlns:log4j='http://jakarta.apache.org/log4j/'>
 
	<appender name="mobapps_log" class="org.apache.log4j.ext.TZDailyRollingFileAppender">
        <param name="append" value="true" />
        <param name="file" value="${OPENSHIFT_LOG_DIR}mobapps/mobapps.log" />
        <param name="DatePattern" value="'.'yyyy-MM-dd" />
		<param name="timeZone" value="Europe/Lisbon" />
        <layout class="org.apache.log4j.EnhancedPatternLayout">
            <param name="ConversionPattern" value="%d{yyyy/MM/dd HH:mm:ss,SSSZ}{Europe/Lisbon} %-5p [%c{3}] %m%n" />
        </layout>
    </appender>
