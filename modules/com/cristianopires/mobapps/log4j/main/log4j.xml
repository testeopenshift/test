        </layout>
    </appender>
	
	
	<!-- Hibernate log -->
    <category name="org.hibernate">
        <priority value="ALL"/>
        <appender-ref ref="log_hibernate" />
    </category>
	<category name="org.hibernate" additivity="false">
        <priority value="ALL"/>
        <appender-ref ref="log_hibernate" />
    </category>
	<logger name="org.hibernate.type">
		<level value="TRACE" />
	</logger>
	
